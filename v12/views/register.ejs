<%include ./partials/header %>
<h1 style="text-align: center">signup form</h1>
<div style="width: 30%; margin: 20px auto">
    <form action="/register" method="POST">
        <div class="form-group">
            <label for="username">username:</label>
            <input class="form-control" type="text" name="username" placeholder="username" id="username">
        </div>
        <div class="form-group">
            <label for="password">password:</label>
            <input class="form-control" type="password" placeholder="username" name="password" id="password">
        </div>
        <div class="form-group">
            <label for="adminCode">Admin Code:</label>
            <input class="form-control" type="text" name="adminCode" placeholder="Admin Code" id="adminCode">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-default btn-block btn-primary"type="submit">Sign Up</button>
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
</div>


